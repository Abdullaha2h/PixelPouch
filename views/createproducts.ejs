<%- include('./partials/header') %>

<div class="bg-white text-gray-900 min-h-screen flex">
    <% if (success.length > 0) { %>
        <div class="absolute top-5 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-green-600 shadow-md">
            <span class="text-white font-medium"><%= success %></span>
        </div>
    <% } %>

    <!-- Sidebar -->
    <aside class="w-1/4 bg-gray-100 h-screen px-6 py-20 shadow-md flex flex-col items-start">
        <div class="mb-8">
            <h2 class="text-2xl font-bold text-blue-600">Dashboard</h2>
            <p class="text-sm text-gray-600">Manage your products efficiently</p>
        </div>
        <nav class="w-full">
            <ul class="space-y-4">
                <li>
                    <a href="#" class="flex items-center space-x-3 py-2 px-4 rounded-md text-gray-600 bg-gray-200 hover:bg-blue-500 hover:text-white transition-all">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M3 10h11m4 0h4M7 16h6M3 4h18" />
                        </svg>
                        <span>All Products</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="flex items-center space-x-3 py-2 px-4 rounded-md text-gray-600 hover:bg-blue-500 hover:text-white transition-all">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
                        </svg>
                        <span>Create New Product</span>
                    </a>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-grow p-10 overflow-auto">
        <h2 class="text-2xl font-bold mb-6 text-blue-600">Create New Product</h2>
        <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data" class="space-y-8">
            <!-- Product Details -->
            <section>
                <h3 class="text-lg font-semibold mb-4 text-blue-600">Product Details</h3>
                <div class="space-y-4">
                    <div>
                        <label class="block mb-2 font-medium text-gray-700">Product Image</label>
                        <div class="relative">
                            <input name="image" type="file" class="w-full px-4 py-2 rounded-md bg-gray-100 border border-gray-300 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 file:border-0 file:bg-blue-100 file:px-6 file:py-3 file:rounded-md file:text-blue-600 file:hover:bg-blue-200">
                          
                        </div>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <input name="name" type="text" placeholder="Product Name" class="w-full px-4 py-2 rounded-md bg-gray-100 border border-gray-300 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <input name="price" type="text" placeholder="Product Price" class="w-full px-4 py-2 rounded-md bg-gray-100 border border-gray-300 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <input name="discount" type="text" placeholder="Discount Price" class="w-full px-4 py-2 rounded-md bg-gray-100 border border-gray-300 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                </div>
            </section>

            <!-- Panel Details -->
            <section>
                <h3 class="text-lg font-semibold mb-4 text-blue-600">Panel Details</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <input name="bgcolor" type="text" placeholder="Background Color" class="w-full px-4 py-2 rounded-md bg-gray-100 border border-gray-300 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <input name="panelcolor" type="text" placeholder="Panel Color" class="w-full px-4 py-2 rounded-md bg-gray-100 border border-gray-300 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <input name="textcolor" type="text" placeholder="Text Color" class="w-full px-4 py-2 rounded-md bg-gray-100 border border-gray-300 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
            </section>

            <!-- Submit Button -->
            <button type="submit" class="w-full md:w-auto px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white font-medium rounded-md shadow-md">
                Create New Product
            </button>
        </form>
    </main>
</div>

<%- include('./partials/footer') %>
