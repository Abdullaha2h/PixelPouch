<%- include('./partials/header', { loggedin }) %>

<div class="bg-white text-gray-900 min-h-screen">
    <% if (error.length > 0) { %>
        <div class="absolute top-5 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-red-600">
            <span class="inline-block text-white"><%= error %></span>
        </div>
    <% } %>
    <div class="flex flex-col md:flex-row w-full h-screen">
        <div class="w-full md:w-1/2 flex items-center justify-center px-10 py-5">
            <div class="w-full max-w-lg">
                <h3 class="text-4xl font-bold mb-2">
                    Welcome to <span class="text-blue-600">PixelPouch</span>
                </h3>
                <h4 class="text-lg mb-6">Create your account</h4>
                <form autocomplete="off" action="/users/register" method="post">
                    <input
                        class="block w-full px-4 py-3 mb-4 bg-gray-100 border border-gray-300 rounded-lg text-gray-900 focus:ring-2 focus:ring-blue-600"
                        type="text" placeholder="Full Name" name="fullname" required>
                    <input
                        class="block w-full px-4 py-3 mb-4 bg-gray-100 border border-gray-300 rounded-lg text-gray-900 focus:ring-2 focus:ring-blue-600"
                        type="email" placeholder="Email" name="email" required>
                    <input
                        class="block w-full px-4 py-3 mb-4 bg-gray-100 border border-gray-300 rounded-lg text-gray-900 focus:ring-2 focus:ring-blue-600"
                        type="password" placeholder="Password" name="password" required>
                    <button
                        class="w-full py-3 mt-2 bg-blue-600 hover:bg-blue-500 text-white rounded-lg">
                        Create My Account
                    </button>
                </form>
            </div>
        </div>
        <div class="w-full md:w-1/2 flex items-center justify-center px-10 py-5 bg-gray-100">
            <div class="w-full max-w-lg">
                <h4 class="text-lg font-semibold mb-6">Log in to your account</h4>
                <form autocomplete="off" action="/users/login" method="post">
                    <input
                        class="block w-full px-4 py-3 mb-4 bg-gray-100 border border-gray-300 rounded-lg text-gray-900 focus:ring-2 focus:ring-blue-600"
                        type="email" placeholder="Email" name="email" required>
                    <input
                        class="block w-full px-4 py-3 mb-4 bg-gray-100 border border-gray-300 rounded-lg text-gray-900 focus:ring-2 focus:ring-blue-600"
                        type="password" placeholder="Password" name="password" required>
                    <button
                        class="w-full py-3 mt-2 bg-blue-600 hover:bg-blue-500 text-white rounded-lg">
                        Login
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
